<div class="page-header">
  <h1>Edit Product #<%= @product.id %></h1>
</div>

<form action="/products/<%= @product.id %>/update">
  <div class="form-group">
    <label>Enter a Product Name:</label>
    <input value=<%= @product.name %> name="name" type="text" class="form-control input-md" placeholder="Example: 5-Piece Luggage Set">
  </div>
  <div class="form-group">
    <label>Enter a Product Decription:</label>
    <textarea value=<%= @product.description %> name="description" class="form-control input-md" rows="5" ></textarea>
  </div>
  <div class="form-group">
    <label>Enter the Price:</label>
    <input value=<%= @product.price %> name="price" type="text" class="form-control input-md" placeholder="Enter amount in exact dollars only">
  </div>
  <div class="form-group">
    <label>Link to Photo:</label>
    <input value=<%= @product.image_url %> name="image_url" type="text" class="form-control input-md" placeholder="http://....">
  </div>
  <button type="submit" class="btn btn-success btn-md">Submit</button>
  or
  <a href="/products">Cancel</a>
</form>
